# ===========================
# إعدادات الخادم
# ===========================
NODE_ENV=development
PORT=5000

# ===========================
# قاعدة البيانات MongoDB
# ===========================
MONGO_URI=mongodb://localhost:27017/church

# ===========================
# Redis
# ===========================
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================
# JWT - رموز المصادقة
# ===========================
JWT_ACCESS_SECRET=your_access_secret_key_here_change_in_production
JWT_REFRESH_SECRET=your_refresh_secret_key_here_change_in_production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN_MS=604800000

# ===========================
# Cloudinary - رفع الملفات
# ===========================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ===========================
# CORS
# ===========================
CORS_ORIGIN=*

# ===========================
# Rate Limiting - تحديد المعدل
# ===========================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# ===========================
# رفع الملفات
# ===========================
MAX_FILE_SIZE=5242880

# ===========================
# Cache TTL (ثواني)
# ===========================
CACHE_USER_TTL=3600
CACHE_PERMISSIONS_TTL=1800
